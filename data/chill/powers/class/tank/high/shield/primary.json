{
    "name": "Warrior's Protection",
    "description": "Able to deploy a shield that blocks damage from any source you can see",
    "type": "origins:multiple",
    "build": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "amount": 1
            },
            "resource": "*:*_resource"
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": "==",
            "compare_to": 0
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 120,
        "hud_render": {
            "should_render": true,
            "bar_index": 0,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_resource",
                "comparison": ">",
                "compare_to": 0
            },
            "sprite_location": "chill:textures/item/bars/wizard_bars.png"
        }
    },
    "on_hit": {
        "type": "origins:modify_damage_taken",
        "bientity_condition": {
            "type": "apoli:can_see"
        }
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 120,
        "hud_render": {
            "should_render": true,
            "bar_index": 0,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": ">",
                "compare_to": 0
            },
            "sprite_location": "chill:textures/item/bars/wizard_bars.png"
        }
    },
    "cooling": {
        "type": "origins:action_over_time",
        "interval": 2,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": "==",
            "compare_to": 0,
            "inverted": true
        },
        "entity_action": {
            "type": "origins:modify_resource",
            "modifier": {
                "operation": "add_base_early",
                "amount": -1
            },
            "resource": "*:*_cooldown"
        }
    },
    "activate": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "all_of",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_resource",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        },
        "entity_action": {

            "type": "origins:execute_command",
            "command": "tp @e[type=item_display, tag=aj.sheild.root, limit=1, sort=nearest] ~ ~1.2 ~ facing ^ ^ ^10"
        },
        "falling_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "execute as @e[type=item_display, tag=aj.sheild.root, limit=1, sort=nearest] run function animated_java:sheild/remove/this"
                },
                {
                    "type": "origins:modify_resource",
                    "modifier": {
                        "operation": "set_total",
                        "value": 0,
                        "resource": "*:*_resource"
                    },
                    "resource": "*:*_cooldown"
                },
                {
                    "type": "origins:modify_resource",
                    "modifier": {
                        "operation": "set_total",
                        "amount": 0
                    },
                    "resource": "*:*_resource"
                }
            ]
        },
        "rising_action": {
            "type": "origins:execute_command",
            "command": "function animated_java:sheild/summon {args: {animation:'deploy', start_animation: true}}"
        }
    }
}